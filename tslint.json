{
  "extends": [
    "tslint:recommended",
    "tslint-react", 
    "tslint-config-prettier",
    "tslint-immutable"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "semicolon": [true, "never"],
    "member-access": false,
    "object-literal-sort-keys": false,
    "quotemark": [false, "single"],
    "interface-name": [true, "never-prefix"]
  }
}
